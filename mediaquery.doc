@media only screen and (min-width: 600px ) and (max-width: 1023px) {
    .text-background {
        color: #ffff;
        font-weight: 200 ;
        font-size: 2.5rem;
        width: 300px;
        margin: 0;
        padding-top: 20px;
    }
    /* Page one */
    .body {
        background-color: #fd9d20;
        height: 520px;
        /* padding-top: 37px;
        padding-left: 282px; */
        padding: 37px 50px 0 50px;
        width: 100%;
    }
    .text-modifier-background {
        color: #ffff;
        font-weight: 400;
        font-size: 1.5rem;
        margin: 0;
    }
    .caffee {
        max-width: 200px;
        height: 100px;
    }
    .Protein-coffee {
        max-width: 400px;
        height: 100%;
    }
    .btn-order {
        font-size: 1.4rem;
        width: 180px;
        height: 60px;
        font-weight: 600;
        margin-left: 20px;
        margin: 40px 0;
    }
    .infomation {
        background-color: #f9f6f2;
        height: 100%;
        /* padding-top: 37px;
        padding-left: 282px; */
        height:520px;
        width: 100%;
    }
    .infomation__subtitles-rating--evaluate {
        /* display: none; */
    }
    .infomation-img {
        width: 300px;
    }
    /* Body two */
    .infomation__subtitles-rating {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 0px 50px;
    }
    .infomation__subtitles {
        display: flex;
    }
    .infomation-img {
        padding-top: 50px;
        margin: 0px;
    }
    .infomation__service {
        display: flex;
        flex-direction: column;
        padding: 0px 0px;
        justify-content: center;
    }
    .infomation__service-ship, .infomation__service-money, .infomation__service-like {
        width: 50%;
        display: block;
        text-align: center;
        padding: 10px 0;
    }
    .infomation__rating {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-bottom: 10px;
    }
    
    .infomation__rating-text {
        font-weight: 500;
        letter-spacing: 2px;
        margin: 0;
        padding-bottom: 10px;
    }
    
    .infomation__rating-comment {
        font-size: 1rem;
        color: #91816a;
        padding-bottom: 10px;
    }
    
    .infomation__rating-star--icon {
        color: #91816a;
        font-size: 1.2rem;
    }
    
    .infomation__rating-describe {
        display: none;
    }
    /* Body three */
    .pr {
        background-color: #ffff;
        padding: 0 50px;
        width: 100%;
    }
    .pr__header-title {
        line-height: 2.5rem;
        font-size: 2rem;
        max-width: 600px;
        padding-top: 80px;
        margin: 0;
        color: #3f3631;
        text-align: center;
        padding-bottom: 7px;
    }
    .pr__header {
        display: flex;
        align-items: center;
        flex-direction: column;
    }
}